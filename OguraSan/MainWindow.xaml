<Window x:Name="SuperWindow" x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OguraSan"
        mc:Ignorable="d"
        Title="MainWindow" Height="610" Width="987" FontFamily="BIZ UDPGothic" FontSize="16">
    <Window.Resources>
        <Style TargetType="MenuItem">
            <Setter Property="FontFamily" Value="Noto Sans JP"/>
            <Setter Property="FontSize" Value="12px"/>
        </Style>
    </Window.Resources>
    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="3" x:Name="SuperMenu">
            <MenuItem x:Name="Basic" Header="基本設定 (_B)">
                <MenuItem x:Name="SuperMenuItemKimariji" Header="決まり字で表示 (_K)" IsCheckable="True"/>
            </MenuItem>
            <MenuItem Header="表示設定 (_S)">
                <MenuItem x:Name="SuperFont" Header="フォント設定 (_F)"/>
            </MenuItem>
        </Menu>
        <TextBlock x:Name="SuperKaminoku" Grid.ColumnSpan="3" Text="秋の田の仮庵の庵の苫をあらみ" FontFamily="UD Digi Kyokasho NP" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
        <TextBlock x:Name="SuperQuestion" Grid.Row="2" Grid.RowSpan="3" TextWrapping="Wrap">
            表示されている上の句に対応する下の句を全て歴史的仮名遣いのひらがなで表記した形で入力してください．
        </TextBlock>
        <Label Target="{Binding ElementName=SuperMaxRecord}" Content="最高記録" Grid.Row="2" Grid.Column="1"/>
        <TextBox x:Name="SuperMaxRecord" IsReadOnly="True" Grid.Row="2" Grid.Column="2"/>
        <Label Target="{Binding ElementName=SuperLastRecord}" Content="前回記録" Grid.Row="3" Grid.Column="1"/>
        <TextBox x:Name="SuperLastRecord" IsReadOnly="True" Grid.Row="3" Grid.Column="2"/>
        <Label Target="{Binding ElementName=SuperRecord}" Content="今回記録" Grid.Row="4" Grid.Column="1"/>
        <TextBox x:Name="SuperRecord" IsReadOnly="True" Grid.Row="4" Grid.Column="2"/>
        <TextBox x:Name="SuperAnswer" Grid.Row="5" FontFamily="UD Digi Kyokasho NP" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="SuperSubmitButton" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2">送信</Button>
    </Grid>
</Window>
